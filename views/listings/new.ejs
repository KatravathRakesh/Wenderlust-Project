<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="md-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Add a catchy title"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks Good!</div>
        </div>

        <div class="md-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="enter your description"
            type="text"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description.</div>
        </div>

        <div class="md-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input name="listing[image]" type="file" class="form-control" />
          required
        </div>

        <div class="row">
          <div class="md-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="1200"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a vaild Price</div>
          </div>

          <div class="md-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please select a valid country.</div>
          </div>
        </div>

        <div class="md-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Telangana, Mumbai"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please select a current location.</div>
        </div>

        <div class="col-auto mt-3">
          <button class="btn btn-outline-success">ADD</button>
        </div>
        <br />
      </form>
    </div>
  </div>
</body>
